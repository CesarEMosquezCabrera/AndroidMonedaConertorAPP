<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Sección 1: Texto Superior (sin cambios) -->
    <TextView
        android:id="@+id/textViewSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monedas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sección 2: Tres Botones en Fila (sin cambios) -->
    <Button
        android:id="@+id/buttonPantalla1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pantalla 1"
        app:layout_constraintTop_toBottomOf="@+id/textViewSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPantalla2"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonPantalla2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pantalla 2"
        app:layout_constraintTop_toTopOf="@+id/buttonPantalla1"
        app:layout_constraintStart_toEndOf="@+id/buttonPantalla1"
        app:layout_constraintEnd_toStartOf="@+id/buttonPantalla3"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <Button
        android:id="@+id/buttonPantalla3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pantalla 3"
        app:layout_constraintTop_toTopOf="@+id/buttonPantalla1"
        app:layout_constraintStart_toEndOf="@+id/buttonPantalla2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Sección 3: Contenedor para los items de moneda (AHORA UN SCROLLVIEW CON UN LINEARLAYOUT) -->
    <ScrollView
        android:id="@+id/scrollViewMonedas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPantalla1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/containerMonedasDinamico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"/>
    </ScrollView>
